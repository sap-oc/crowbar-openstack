[
 {rabbit,
  [
   {tcp_listeners, [
                    <%= node[:rabbitmq][:addresses].map { |address| "{\"#{address}\", #{node[:rabbitmq][:port]}}" }.join(", ") %>
                   ]},
<% if @add_cluster_section -%>
   {cluster_nodes, {[
                     <%= @cluster_nodes %>
                    ], disc}
   },
<% end -%>
   {disk_free_limit, 50000000}
  ]
 },
 {rabbitmq_management,
  [
   {listener, [{ip, "<%= node[:rabbitmq][:management_address] %>"}, {port, <%= node[:rabbitmq][:management_port] %>}]}
  ]
 }
].
