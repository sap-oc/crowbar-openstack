[DEFAULT]
bind_ip = <%= @storage_net_ip %>
bind_port = 6200
user = <%= node[:swift][:user] %>
workers = <%= [node["cpu"]["total"], 2, 4].sort[1] %>
log_name = swift-o
log_level = <%= @debug? "DEBUG": "INFO" %>
[pipeline:main]
pipeline = healthcheck recon object-server
[app:object-server]
use = egg:swift#object
log_requests = true
splice = yes
[filter:healthcheck]
use = egg:swift#healthcheck
[filter:recon]
use = egg:swift#recon
[object-replicator]
run_pause = <%= node[:swift][:replication_interval] %>
[object-updater]
[object-auditor]
[filter:xprofile]
use = egg:swift#xprofile
